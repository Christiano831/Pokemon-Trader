<!DOCTYPE html>
<html>
  <head>
    <title>Offers Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a class="active" href="/offers">Search Pokemon</a>
      <a href="/requests">Request Trade</a>
      <% if (user) { %>
        <a href="/logout">LOG OUT</a>
      <% } else { %>
        <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
      <% } %>
    </div>
    <h1>Offers Page</h1>

    <a href="/offers/new">Offer a Pokemon</a>

    <table>
      <thead>
        <tr>
          <th>Pokemon</th>
          <th> </th>
          <th>User</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% offers.forEach(function(o) { %>
          <tr>
            <td><%= o.pokemonOffer %></td>
            <td><img src='<%= pokeName.sprites.front_default %>'></td>
            <td><%= o.gameUserName %></td>
            <td><a href="/offers/<%= o._id %>">Details</a></td>
            
          </tr>
          <% }); %>
        </tbody>
        
      </table>

  </body>
</html>
