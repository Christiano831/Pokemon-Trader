<!DOCTYPE html>
<html>
  <head>
    <title>Request</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/offers">Search Pokemon Offers</a>
        <a href="/requests">Request Trade</a>
        <% if (user) { %>
          <a href="/logout">LOG OUT</a>
        <% } else { %>
          <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
        <% } %>
      </div>


    <h1><%= title %> </h1>

    <button><a href="/requests/<%= request.id %>/edit">Edit Pokemon Request Details</a></button>

    <div>
      <div>Pokemon being requested:</div>
      <div><%= request.pokemonRequest %> </div>
      <div>Your in game username:</div>
      <div><%= request.gameUserName %> </div>
      <div>Pokemon being offered if any:</div>
      <div><%= request.pokemonOffer %> </div>
    </div>

    <div>
      <form action="/requests/<%= request.id %>?_method=DELETE" method="POST">
          <button type="submit">Delete Request</button>
      </form>

      <div>
        <% if (user) { %> 
          <% request.comments.forEach(function(c) { %> 
            <p> <%= c.text %>  </p>
            
          <% }) %>
        <% } %>
        <p><%= console.log(request) %> </p>
      </div>
  
      <form action="/requests/<%= request._id %>/comments" method="POST">
        <!-- Be sure name attributes of inputs match the model properties -->
        <input name="text">
          <button type="submit">ADD COMMENT</button>
        </input>
      </form>


  </div>
  </body>
</html>
